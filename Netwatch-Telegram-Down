:local bot "[Token_bot]";
:local chatID "[Chat_id]";
:local varDate;
:local varDay;
:local varTime;
:local varHost;
:local varIdentity;
:local varStatus;
:local varMon;
:set varDate [/system clock get date];
:set varDay [:pick $varDate 4 6];
:set varTime [/system clock get time];
:set varHost [/tool netwatch get value-name=host number=0];
:set varIdentity [/tool netwatch get value-name=comment number=0];
:set varStatus [/tool netwatch get value-name=status number=0];
:set varMon [/system identity get value-name=name];
/tool fetch url="https://api.telegram.org/bot$bot/sendmessage\?chat_id=$chatID&text=\E2\9C\A8 ALERT NOTIFICATION!!%0AStatus: $varStatus %E2\9C\85 %0AFrom: $varMon  %0A%0AIP: $varHost %0ADescription: $varIdentity %0ADate: $varDate %0ATime: $varTime %0A" keep-result=no src-address=103.158.252.3;}
